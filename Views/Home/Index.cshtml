
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="client-signin-controller">
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-4">
                            <div class="brand-logo">
                                <img src="~/Content/images/logo.png">
                            </div>
                            <h4>Hello! let's get started</h4>
                            <h6 class="font-weight-light">Sign in to continue.</h6>
                            <div class="row">
                                <div class="col-md-6 text-center">
                                    <a class="text-white cursor badge btn-block badge-outline-dark badge-dark"
                                       id="_selectEmployer"
                                       ng-click="onClick_SetAsSelected('employer')">
                                        Employer
                                    </a>
                                </div>
                                <div class="col-md-6 text-center">
                                    <a class="cursor badge btn-block badge-outline-dark"
                                       id="_selectEmployee"
                                       ng-click="onClick_SetAsSelected('employee')">
                                        Member
                                    </a>
                                </div>
                            </div>
                            <form class="pt-3" name="dataForm" autocomplete="off">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" id="txtEmail"
                                           ng-model="email"
                                           required
                                           placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="txtPassword"
                                           ng-model="password"
                                           required
                                           placeholder="Password">
                                </div>
                                <div class="mt-3">
                                    <input type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"
                                           ng-click="dataForm.$valid && onClick_SignIn()"
                                           value="SIGN IN" />
                                </div>
                                <div class="mt-3" ng-if="isShowMessage">
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        {{message}}
                                    </div>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Keep me signed in
                                        </label>
                                    </div>
                                    <a href="/forgot-password" class="auth-link text-black">Forgot password?</a>
                                </div>
                                <div class="mb-2">
                                    <a href="/registration" class="btn btn-block btn-facebook auth-form-btn text-white cursor">
                                        SIGNUP AS EMPLOYER
                                    </a>
                                </div>
                            </form>
                        </div>
                        <div class="text-center p-4">
                            <h6 class="font-weight-light">
                                By selecting Sign-In, You agree to our <a href="/TermsConditions" target="_blank"> Terms & Conditions </a> and <a href="/PrivacyPolicy" target="_blank"> Privacy Policy </a>
                            </h6>
                            <h6 class="font-weight-light">
                                © Copyrights <a href="https://izem.my" target="_blank">Erazem Sdn Bhd</a>. All right reserved.
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/_loginAuthentication/Code/client-signin-controller.js"></script>
}
