
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>SignIn - iZem | Employee Benefits | Payroll | Clinic Management | IzemEBS | IzemPAY | IzemCMS</title>
    <link rel="stylesheet" href="~/Content/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Content/assets/css/style.css">
    <link rel="stylesheet" href="~/Content/assets/css/manual.css" />
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Content/assets/images/favicon.png" />
    <script>
        var backlink = '@(System.Configuration.ConfigurationManager.AppSettings["backlink"].ToString())';
    </script>
</head>
<body>
    <div class="overlay"></div>
    <div ng-app="backoffice-authentication-app" ng-cloak>
        <div ng-controller="backoffice-authentication-controller">
            <div class="container-scroller">
                <div class="container-fluid page-body-wrapper full-page-wrapper">
                    <div class="content-wrapper d-flex align-items-center auth">
                        <div class="row flex-grow">
                            <div class="col-lg-4 mx-auto">
                                <div class="auth-form-light text-left p-4">
                                    <div class="brand-logo">
                                        <img src="~/Content/images/logo.png">
                                    </div>
                                    <h4>Hello! let's get started</h4>
                                    <h6 class="font-weight-light">Sign in to continue.</h6>
                                    <form class="pt-3" name="dataForm" autocomplete="off">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-lg" id="txtEmail"
                                                   ng-model="email"
                                                   required
                                                   placeholder="Username">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-lg" id="txtPassword"
                                                   ng-model="password"
                                                   required
                                                   placeholder="Password">
                                        </div>
                                        <div class="mt-3">
                                            <input type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"
                                                   ng-click="dataForm.$valid && onClick_SignIn()"
                                                   value="SIGN IN" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/Content/assets/js/off-canvas.js"></script>
    <script src="~/Content/assets/js/hoverable-collapse.js"></script>
    <script src="~/Content/assets/js/misc.js"></script>

    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>

    <script src="~/Content/common/common.js"></script>

    <script src="~/Areas/Backoffice/_Backoffice/Code/Authentication/backoffice-authentication-app.js"></script>
    <script src="~/Areas/Backoffice/_Backoffice/Code/Authentication/backoffice-authentication-controller.js"></script>
</body>
</html>
