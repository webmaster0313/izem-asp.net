
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/Employer/Views/Shared/_Layout.cshtml";
}

<div ng-controller="client-changepassword-controller">
    <div class="row">
        <div class="col-md-6 mb-1">
            <form name="dataForm" autocomplete="off">
                <div class="card">
                    <div class="card-header">
                        Update Password
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 mt-1">
                                <div class="form-group">
                                    <label>New Password<span class="text-danger">*</span></label>
                                    <input type="password" class="form-control form-control-lg"
                                           ng-model="newPassword"
                                           required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" class="btn btn-outline-primary mt-1"
                               ng-click="dataForm.$valid && onClick_SubmitData()"
                               value="Submit" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Employer/_Employer/Code/Home/client-changepassword-controller.js?version=@(System.Configuration.ConfigurationManager.AppSettings["version"].ToString())"></script>
}