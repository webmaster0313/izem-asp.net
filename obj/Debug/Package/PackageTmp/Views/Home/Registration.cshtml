
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="client-registration-controller">
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-4">
                            <div class="brand-logo">
                                <img src="~/Content/images/logo.png">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            <form class="pt-3" name="signupForm" autocomplete="off">
                                <div class="form-group">
                                    <label for="txtFullName">Employer / Company Name<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control form-control-lg" id="txtFullName"
                                           ng-model="name"
                                           required
                                           placeholder="Employer / Company Name">
                                </div>
                                <div class="form-group">
                                    <label for="txtMobile">Mobile<span class="text-danger">*</span></label>
                                    <input type="text" class="form-control form-control-lg" id="txtMobile"
                                           onkeypress="preventNonNumericalInput(event)"
                                           ng-model="mobile"
                                           required
                                           placeholder="Mobile">
                                </div>
                                <div class="form-group">
                                    <label for="txtEmail">Email<span class="text-danger">*</span></label>
                                    <input type="email" class="form-control form-control-lg" id="txtEmail"
                                           ng-model="email"
                                           required
                                           placeholder="Email">
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtPassword">Password<span class="text-danger">*</span></label>
                                            <input type="password" class="form-control form-control-lg" id="txtPassword"
                                                   ng-model="password"
                                                   required
                                                   placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="txtConfirmPassword">Confirm Password<span class="text-danger">*</span></label>
                                            <input type="password" class="form-control form-control-lg" id="txtConfirmPassword"
                                                   ng-model="su_ConfirmPassword"
                                                   required
                                                   ng-keyup="onChange_confirmPassword()"
                                                   placeholder="Confirm Password">
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"
                                                   ng-model="checkTerms"> I agree to all Terms & Conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3" ng-if="showMsg">
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        {{message}}
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <input type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"
                                           ng-click="signupForm.$valid && onClick_SignUp()"
                                           ng-disabled="passwordIsConfirm"
                                           value="SIGN UP" />
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="/" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/_loginAuthentication/Code/client-registration-controller.js"></script>
}