
@{
    ViewBag.Title = "Verification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="client-verification-controller">
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-4">
                            <div class="brand-logo">
                                <img src="~/Content/images/logo.png">
                            </div>
                            <h4>let's verify the email</h4>
                            <h6 class="font-weight-light">Verify email to continue.</h6>
                            <form class="pt-3" name="dataForm" autocomplete="off">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" id="txtEmail"
                                           ng-model="email"
                                           disabled>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="txtPassword"
                                           ng-model="accessCode"
                                           required
                                           placeholder="Access Code">
                                </div>
                                <div class="mt-3">
                                    <input type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"
                                           ng-click="dataForm.$valid && onClick_Verification()"
                                           value="Verify E-Mail" />
                                </div>
                                <div class="mt-3" ng-if="isShowMessage">
                                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                        {{message}}
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/_loginAuthentication/Code/client-verification-controller.js"></script>
}