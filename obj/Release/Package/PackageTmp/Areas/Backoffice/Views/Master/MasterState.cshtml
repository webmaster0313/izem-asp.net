
@{
    ViewBag.Title = "Master-State";
    Layout = "~/Areas/Backoffice/Views/Shared/_Layout.cshtml";
}

<div ng-controller="master-state-controller">

    @*Entry List*@

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Master Entry</a></li>
            <li class="breadcrumb-item active" aria-current="page">State</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-12" ng-show="hideEntry">
            <div class="card">
                <div class="card-header">
                    <div class="float-right">
                        <a class="listMenu" data-toggle="tooltip" data-placement="top"
                           title="Open search" ng-click="onClick_OpenSearch()">
                            <i class="mdi mdi-filter icon-font-size filterMenu"></i>
                        </a>
                        <a class="listMenu" data-toggle="tooltip" data-placement="top"
                           title="Reset result" ng-click="onClick_ResetSearch()">
                            <i class="mdi mdi-view-list icon-font-size viewMenu"></i>
                        </a>
                        <a class="listMenu" data-toggle="tooltip" data-placement="top"
                           title="New entry" ng-click="onClick_AddRecord()">
                            <i class="mdi mdi-plus-box icon-font-size addMenu"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-responsive-xl">
                        <thead>
                            <tr>
                                <th class="widthCenter">Code</th>
                                <th>Country</th>
                                <th>State</th>
                                <th class="widthCenter">Status</th>
                                <th class="widthCenter">Active</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-if="!loaded">
                                <td class="loading"><div class="bar"></div></td>
                                <td class="loading"><div class="bar"></div></td>
                                <td class="loading"><div class="bar"></div></td>
                                <td class="loading"><div class="bar"></div></td>
                                <td class="loading"><div class="bar"></div></td>
                            </tr>
                            <tr ng-if="loaded" ng-repeat="x in tableParams">
                                <td>{{x.masterstateCode}}</td>
                                <td>{{x.mastercountryTitle}}</td>
                                <td>{{x.masterstateTitle}}</td>
                                <td class="text-nowrap text-center">
                                    <span style="width: 70px;" ng-if="x.masterstateIsActive.data[0]=='0'" class="badge badge-danger">inactive</span>
                                    <span style="width: 70px;" ng-if="x.masterstateIsActive.data[0]=='1'" class="badge badge-success">active</span>
                                </td>
                                <td class="text-nowrap">
                                    <a class="cursor" ng-click="onClick_EditRecord(x.masterstateId)">
                                        <i class="mdi mdi-pencil-box icon-font-size text-info"></i>
                                    </a>
                                    <a class="cursor" ng-click="onClick_DeleteRecord(x.masterstateId)">
                                        <i class="mdi mdi-delete-forever icon-font-size text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="float-left">
                                <select ng-model="pageSizeSelected" ng-change="changePageSize()" class="badge">
                                    <option value="15">15</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                            </div>
                            <div class="float-right">
                                <pagination total-items="totalCount" ng-change="pageChanged()"
                                            items-per-page="pageSizeSelected" direction-links="true" ng-model="pageIndex"
                                            next-text=">" previous-text="<"
                                            max-size="maxSize" class="pagination" first-text="First" last-text="Last"
                                            boundary-links="true" rotate="false"
                                            num-pages="numPages">
                                </pagination>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Entry Form *@

    <div class="row">
        <div class="col-md-12" ng-show="!hideEntry">
            <div class="card">
                <form name="dataForm" autocomplete="off">
                    <div class="card-header">
                        Manage State
                    </div>
                    <div class="card-body">
                        <div style="display:none;">
                            <input type="text" ng-model="masterstateId" />
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Country<span class="text-danger">*</span> </label>
                                    <select ng-model="mastercountryId" class="form-control" required>
                                        <option value="">-- Select --</option>
                                        <option ng-selected="x == mastercountryId" ng-repeat="x in fill_mastercountryId" ng-value="x.mastercountryId">
                                            {{x.mastercountryTitle}}
                                        </option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Code<span class="text-danger">*</span> </label>
                                    <input type="text" class="form-control form-control-lg"
                                           required
                                           ng-model="masterstateCode">
                                </div>
                                <div class="form-group">
                                    <label>State<span class="text-danger">*</span> </label>
                                    <input type="text" class="form-control form-control-lg"
                                           required
                                           ng-model="masterstateTitle">
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input"
                                               ng-model="masterstateIsActive"> Is it active?
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" class="btn btn-gradient-primary m-1" ng-click="dataForm.$valid && onClick_Submit()" />
                        <button type="button" class="btn btn-inverse-dark m-1" ng-click="onClick_Cancel()">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @*Search Modal*@

    <div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalLabel"
         aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="searchModalLabel">Search Result</h5>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Country</label>
                                <select ng-model="SearchMasterCountryId" class="form-control">
                                    <option value="">-- Select --</option>
                                    <option ng-repeat="x in fill_SearchMasterCountryId" ng-value="x.mastercountryId">
                                        {{x.mastercountryTitle}}
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>State</label>
                                <input type="text" class="form-control"
                                       ng-model="SearchMasterStateTitle">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Status</label>
                                <select ng-model="SearchMasterstateIsActive" class="form-control">
                                    <option value="true">Active</option>
                                    <option value="false">InActive</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" ng-click="onClick_CloseSearch()">Close</button>
                    <button type="button" class="btn btn-primary" ng-click="onClick_SearchResult()">Search</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts{
    <script src="~/Areas/Backoffice/_Backoffice/Code/Master/master-state-controller.js"></script>
}