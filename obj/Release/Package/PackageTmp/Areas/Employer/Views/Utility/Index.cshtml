
@{
    ViewBag.Title = "Employer Permission Setting";
    Layout = "~/Areas/Employer/Views/Shared/_Layout.cshtml";
}


<div ng-controller="employer-permissionsetting-controller">

    @*Entry List*@

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Utility</a></li>
            <li class="breadcrumb-item active" aria-current="page">Permission Setting</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form autocomplete="off">
                    <div class="card-header">
                        Manage Permission Setting
                    </div>
                    <div class="card-body">
                        <div style="display:none;">
                            <input type="text" ng-model="employerPermissionSettingId" />
                        </div>
                        <div class="form-group">
                            <label>BankName</label>
                            <select ng-model="employerBankName" class="form-control" style="width:300px;" >
                                <option value="">-- Select --</option>
                                <option ng-selected="x == masteremployerbankName" ng-repeat="x in fill_masteremployerBankName" ng-value="x.masteremployerbankName">
                                    {{x.masteremployerbankName}}
                                </option>
                            </select>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label text-muted">
                                <input type="checkbox" class="form-check-input"
                                       ng-model="isAutoAttendanceData"> Auto push attendance data?
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label text-muted">
                                <input type="checkbox" class="form-check-input"
                                       ng-model="isAutoSendEmailData"> Auto send emailId?
                            </label>
                        </div>
                        <div class="form-group">
                            <label>Lock Password</label>
                            <input type="text" style="width:150px;" class="form-control form-control-lg"
                                   ng-model="lockPassword"
                                   required>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" class="btn btn-gradient-primary" ng-click="onClick_Submit()" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Employer/_Employer/Code/UtilitySetting/employer-permissionsetting-controller.js?version=@(System.Configuration.ConfigurationManager.AppSettings["version"].ToString())"></script>
}