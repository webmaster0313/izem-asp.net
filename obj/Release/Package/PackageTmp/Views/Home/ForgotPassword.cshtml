
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="client-forgotpassword-controller">
    <div class="container-scroller" ng-show="!isURLType">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-4">
                            <div class="brand-logo">
                                <img src="~/Content/images/logo.png">
                            </div>
                            <h4>Hello! let's reset your password</h4>
                            <h6 class="font-weight-light">Submit registered email id to continue.</h6>
                            <form class="pt-3" name="dataForm" autocomplete="off">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" id="txtEmail"
                                           ng-model="email"
                                           required
                                           placeholder="Email Id">
                                </div>
                                <div class="mt-3">
                                    <input type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"
                                           ng-click="dataForm.$valid && onClick_ResetPassword()"
                                           value="Reset Password" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-scroller" ng-show="isURLType">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-4">
                            <div class="brand-logo">
                                <img src="~/Content/images/logo.png">
                            </div>
                            <h4>Hello! let's reset your password</h4>
                            <h6 class="font-weight-light">Submit registered email id to continue.</h6>
                            <form class="pt-3" name="dataForm1" autocomplete="off">
                                <div class="form-group">
                                    <label for="txtPassword">Password<span class="text-danger">*</span></label>
                                    <input type="password" class="form-control form-control-lg" id="txtPassword"
                                           ng-model="password"
                                           required
                                           placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <label for="txtConfirmPassword">Confirm Password<span class="text-danger">*</span></label>
                                    <input type="password" class="form-control form-control-lg" id="txtConfirmPassword"
                                           ng-model="su_ConfirmPassword"
                                           required
                                           ng-keyup="onChange_confirmPassword()"
                                           placeholder="Confirm Password">
                                </div>
                                <div class="mt-3">
                                    <input type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn"
                                           ng-click="dataForm1.$valid && onClick_ResetMasterPassword()"
                                           ng-disabled="passwordIsConfirm"
                                           value="Reset Password" />
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Back to login? <a href="/" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/_loginAuthentication/Code/client-forgotpassword-controller.js"></script>
}


